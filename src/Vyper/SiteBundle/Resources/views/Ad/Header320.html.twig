{% if ad_header.0.active %}
    {% if ad_header.0.link is null %}
        {% set link = '#' %}
    {% else %}
        {% set link = ad_header.0.link %}
    {% endif %}
    <a href="{{ link }}">
        <img src="{{ asset(ad_header.0.picture.getPath()) }}?size=320-100" alt="">
    </a>
{% else %}
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- Grande banniere pour mobile -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:320px;height:100px"
         data-ad-client="ca-pub-3070362287154347"
         data-ad-slot="3670659510"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
{% endif %}