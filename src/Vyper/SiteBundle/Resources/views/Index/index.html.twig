{% extends "VyperSiteBundle:layouts:layout.html.twig" %}

{% block title "Visual kei - JPop - Jrock - Jmusic avec VYPER Japanese Music Magazine | Toute la Jmusic, toutes les news en temps r√©els" %}

    {% block content %}

        <div class="block-layout-two row">
            <p class="title">
                <span><strong>{{ 'homepage.latests.news'|trans }}</strong></span>
            </p>

            {% for article in latest_news %}
                {% if loop.index <3 %}
                <div class="grid_6">
                    <div class="main-item">
                        <div class="post-img">
                            <a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">
                                <img src="{{ asset(article.picture.getPath('303-162')) }}" alt="{{ article.getTitle }}">
                            </a>

                        </div>
                        <h3><a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">{{ article.getTitle }}</a></h3>
                        <div class="post-dca">
                            <span class="author">{{ 'article.author'|trans }} <a href="#">{{ article.author }}</a></span>
                            <span class="date">{{ 'article.published'|trans }} <a href="#month">{{ article.getReleaseDateFrontFormat() }}</a></span>
                        </div>
                        <p>{{ article.getDescription }}</p>
                    </div>
                </div>
                {% endif %}
            {% endfor %}

        </div>

        <div class="text-center under-margin over-960">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- footer-leaderboard -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:728px;height:90px"
                 data-ad-client="ca-pub-3070362287154347"
                 data-ad-slot="5037213511"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        <div class="only-720">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- un_artist + encarts index -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:468px;height:60px"
                 data-ad-client="ca-pub-3070362287154347"
                 data-ad-slot="6183315514"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
        <div class="only-mobile">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Grande banniere pour mobile -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:320px;height:100px"
                 data-ad-client="ca-pub-3070362287154347"
                 data-ad-slot="3670659510"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>

        <div class="block-layout-five under-margin">

            {% for article in big_news %}
            {% if loop.index == 1 %}
                <div class="main-item">
                    <div class="post-img">
                        <a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">
                            <img src="{{ asset(article.picture.getPath('303-162')) }}" alt="{{ article.getTitle }}">
                        </a>
                                    <span style="background-color: #222222">
                        <a href="#">{{ article.getArticleType.getName }}</a>
                    </span>
                    </div>
                    <div class="post-meta">
                        <h3><a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">{{ article.getTitle }}</a></h3>
                        <div class="post-dca">
                            <span class="author">{{ 'article.author'|trans }} <a href="#">{{ article.author }}</a></span>
                            <span class="date">{{ 'article.published'|trans }} <a href="#month">{{ article.getReleaseDateFrontFormat() }}</a></span>
                            <span class="theme">Theme <a href="#">{{ article.getArticleType.getName }}</a></span>
                        </div>
                        <p>{{ article.getDescription }}</p>
                    </div>
                </div>
            {% endif %}
            {% endfor %}


        </div>

        <div class="block-layout-two row">

            {% for article in latest_livereports %}
                {% if loop.index>1 and loop.index<4 %}
                    <div class="grid_6">
                        <div class="main-item">
                            <div class="post-img">
                                <a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">
                                    <img src="{{ asset(article.picture.getPath('303-162')) }}" alt="{{ article.getTitle }}">
                                </a>
                                <span style="background-color: #4A86B8">
                                    <a href="#">{{ article.getArticleType.getName }}</a>
                                </span>
                            </div>
                            <h3><a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">{{ article.getTitle }}</a></h3>
                            <div class="post-dca">
                                <span class="author">{{ 'article.author'|trans }} <a href="#">{{ article.author }}</a></span>
                                <span class="date">{{ 'article.published'|trans }} <a href="#month">{{ article.getReleaseDateFrontFormat() }}</a></span>
                            </div>
                            <p>{{ article.getDescription }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}

        </div>


    {% endblock %}

    {% block javascripts_footer %}

        {{ parent() }}

        {% javascripts
        'bundles/vypersite/dialy/lib/js/flexslider.min.js'
        %}

        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script>
            // Flexslider
            jQuery(".flexslider").flexslider({
                animation: "fade",
                slideshow: true,
                slideshowSpeed: 5000,
                controlNav: false
            });

            $(function () {

                var fancybox_elem = $(".fancybox");
                fancybox_elem.fancybox({
                    openEffect  : 'none',
                    closeEffect : 'none',
                    iframe : {
                        preload: false
                    },
                    helpers : {
                        overlay: {
                            opacity: 0.8, // or the opacity you want
                            css: {'background-color': '#000000'} // or your preferred hex color value
                        } // overlay
                    } // helpers
                });

                fancybox_elem.on('click', function() {
                    googleSend($(this));
                });

                $('.pdf-mobile').on('click', function() {
                    googleSend($(this));
                });

            });

            function googleSend(elem) {
                var slug = elem.data('slug');
                ga('send', 'event', 'Article PDF', 'Clic', slug, {'nonInteraction': 1});
            }

        </script>

    {% endblock %}