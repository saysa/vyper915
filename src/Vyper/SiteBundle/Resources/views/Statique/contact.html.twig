{% extends "VyperSiteBundle:layouts:layout.html.twig" %}

{% block title %}Contact | {{ parent() }}{% endblock %}

    {% block above_the_fold %}
        <div id="above-the-fold" class="above-the-fold light">
            <div class="google_map_holder">
                <div class="google_map" id="map_canvas">
                    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="overflow:hidden;height:450px;width:100%;"><div id="gmap_canvas" style="height:450px;width:100%;"></div><a class="google-map-code" href="http://www.map-embed.com" id="get-map-data">www.map-embed.com</a><style>#gmap_canvas img{max-width:none!important;background:none!important}</style></div><script type="text/javascript"> function init_map(){var myOptions = {zoom:12,center:new google.maps.LatLng(47.810495,-3.630287),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(47.810495,-3.630287)});infowindow = new google.maps.InfoWindow({content:"<img src='{{ asset('bundles/vypersite/img/logo.png') }}?size=30-30' height='30' alt='' />" });google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);</script>

                </div>
            </div>
        </div>

        <div class="above-the-fold light">
            <div class="inner-wrapper">
                <h2 class="page-title">{{ 'contact.title'|trans }}</h2>
            </div>
        </div>
    {% endblock %}

    {% block content %}

        <section id="contact">

            <p class="lead">
                Que vous soyez lecteur, professionnel ou annonceur, chez VYPER le partage est de rigueur.
            </p>

            <div class="row v-align-children" style="margin-top: 50px;">
                <div class="grid_5 col-md-4 text-left">
                    <h3>{{ 'contact.premises'|trans }}</h3>
                    <p>
                        VYPER Japanese Music<br />
                        Résidence St Roch<br />
                        Rue Louis Orvoen<br />
                        29350 Moëlan Sur Mer - France<br>
                        Email: contact@vyper-jmusic.com<br>
                        Phone: +33 (0) 6 59 51 94 80
                    </p>
                </div>

                <div class="grid_7 col-sm-8" id="form">
                    <form method="post" {{ form_enctype(form) }}>

                        {{ form_widget(form._token) }}

                        <h6>{{ 'contact.form.intro.1'|trans|upper }}<br>
                            {{ 'contact.form.intro.2'|trans|upper }}</h6>
                        <div class="row">
                            <div class="half">
                                {{ form_widget(form.firstname, {  'attr': {'class': 'signup-name-field validate-required'} }) }}
                            </div>
                            <div class="half">
                                {{ form_widget(form.lastname, {  'attr': {'class': 'signup-name-field validate-required'} }) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="half">
                                {{ form_widget(form.email, {  'attr': {'class': 'signup-name-field validate-required'} }) }}
                            </div>
                            <div class="half">
                                {{ form_widget(form.website, {  'attr': {'class': 'signup-name-field'} }) }}
                            </div>
                        </div>

                        {{ form_widget(form.message, {  'attr': {'class': 'boxsizingBorder'} }) }}
                        <input class="btn btn-red btn-contact" type="submit" value="{{ 'contact.send.form.button'|trans }} »">
                        {#
                        <div class="form-error">
                            <span>Please fill all fields correctly</span>
                        </div>
                        #}
                        {# On affiche tous les messages flash dont le nom est « info » #}
                        {% for message in app.session.flashbag.get('info') %}
                            <div class="alert green">{{ message }}</div>
                        {% endfor %}

                    </form>
                </div>
            </div>

        </section>



    {% endblock %}