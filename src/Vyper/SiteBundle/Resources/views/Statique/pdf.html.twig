    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function ($) {

            //setPrettyPhoto();
            //$('#pdf').trigger('click');
            $(".fancybox").fancybox({
                openEffect  : 'none',
                closeEffect : 'none',
                iframe : {
                    preload: false
                },
                helpers : {
                    overlay: {
                        opacity: 0.8, // or the opacity you want
                        css: {'background-color': '#000000'} // or your preferred hex color value
                    } // overlay
                } // helpers
            });
            $('#vfancy').trigger('click');

        });

        function setPrettyPhoto() {
            $("a[rel^='prettyPhoto']").prettyPhoto({
                animation_speed: 'slow',
                theme: 'facebook',  /* light_rounded / dark_rounded / light_square / dark_square / facebook */
                show_title: true,
                allow_resize: true,
                counter_separator_label: ' sur ', /* The separator for the gallery counter 1 "of" 2 */
                changepicturecallback: function(){
                    console.log($(this));
                    $pp_pic_holder.find('.pp_social').html('<input type="number" data-size="xs" >');
                    options = { "showClear": false, "showCaption": false };
                }
            });
        }
    </script>

