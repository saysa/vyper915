{% extends "VyperSiteBundle:layouts:layout.html.twig" %}

{% block title %}{{ 'title.features'|trans }} | {{ parent() }}{% endblock %}

{% block above_the_fold %}
    <div id="above-the-fold" class="above-the-fold light">
        <div class="inner-wrapper">
            <h2 class="page-title">{{ 'title.features'|trans|upper }}</h2>
        </div>
    </div>
{% endblock %}

    {% block content %}


        {% for video in videos %}
            {% if loop.index%2!=0 %}<div class="block-layout-two row">{% endif %}
            <div class="grid_6 post-70 post type-post format-standard">
                <div class="main-item">
                    <div class="post-img element-fade-in videoWrapper">
                        <iframe width="422" height="280" src="//www.youtube.com/embed/{{ video.getYoutube }}?wmode=transparent" frameborder="0" allowfullscreen=""></iframe>

                    </div>

                    <h3><a href="">{{ video.getTitle }}</a></h3>
                    <div class="post-dca">
                        <span class="date">{{ video.getReleaseDateFrontFormat(video.getId) }}</span>
                        <ul class="rating-list">
                            <li>

                            </li>
                        </ul>
                    </div>

                    <p>{{ video.getDescription }}</p>
                </div>
            </div>
            {% if loop.index%2==0 %}</div><!-- end row -->{% endif %}
        {% endfor %}







        <div class="add_468">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- un_artist + encarts index -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:468px;height:60px"
                 data-ad-client="ca-pub-3070362287154347"
                 data-ad-slot="6183315514"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>

        <div class="pagination">

            {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
            {% for p in range(1, total_videos) %}
                {% if p == page %}
                    <span class="page-numbers current">{{ p }}</span>
                {% else %}
                    <a href="{{ path('vyper_site_showAllVideos', {'page': p}) }}" class="page-numbers">{{ p }}</a>
                {% endif %}
            {% endfor %}

        </div>
    {% endblock %}