            });

        });
    </script>

    {% javascripts
    'bundles/vypersite/js/fancybox/jquery.fancybox.pack.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function ($) {

            var flickr_gallery_elem = $('.flickr-gallery');
            flickr_gallery_elem.fancybox({
                width: '70%',
                height: '70%',
                helpers : {
                    overlay: {
                        opacity: 0.8, // or the opacity you want
                        css: {'background-color': '#000000'} // or your preferred hex color value
                    } // overlay
                } // helpers
            });


            //setPrettyPhoto();
            //$('#pdf').trigger('click');
            var fancybox_elem = $(".fancybox");
            fancybox_elem.fancybox({
                width: '100%',
                height: '100%',
                openEffect  : 'none',
                closeEffect : 'none',
                iframe : {
                    preload: false
                },
                helpers : {
                    overlay: {
                        opacity: 0.8, // or the opacity you want
                        css: {'background-color': '#000000'} // or your preferred hex color value
                    } // overlay
                } // helpers
            });

            fancybox_elem.on('click', function() {
                googleSend($(this));
            });

            $('.pdf-mobile').on('click', function() {
                googleSend($(this));
            });

            $(".fancy-video").click(function() {
                $.fancybox({
                    'padding'		: 0,
                    'autoScale'		: false,
                    'transitionIn'	: 'none',
                    'transitionOut'	: 'none',
                    'title'			: this.title,
                    'width'			: 640,
                    'height'		: 385,
                    'href'			: this.href.replace(new RegExp("watch\\?v=", "i"), 'v/'),
                    'type'			: 'swf',
                    'swf'			: {
                        'wmode'				: 'transparent',
                        'allowfullscreen'	: 'true'
                    },
                    helpers : {
                        overlay: {
                            opacity: 0.8, // or the opacity you want
                            css: {'background-color': '#000000'} // or your preferred hex color value
                        } // overlay
                    } // helpers
                });

                return false;
            });

        });

        function googleSend(elem) {
            var slug = elem.data('slug');
            ga('send', 'event', 'Article PDF', 'Clic', slug, {'nonInteraction': 1});
        }

    </script>

    {# SHOULD BE ALWAYS AT THE VERY BOTTOM #}
