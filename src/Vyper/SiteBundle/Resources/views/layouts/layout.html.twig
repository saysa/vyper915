    <!--  -->
    {# jQuery (necessary for Bootstrap's Javascript plugins) #}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <![endif]-->
{% endblock %}

{% block body %}
    <!--[if lt IE 9]>
    <p class="chromeframe">{{ 'browser.warning'|trans }} <a data-bypass href="http://browsehappy.com/">{{ 'browser.update'|trans }}</a></p>
    <![endif]-->

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/fr_FR/all.js#xfbml=1&appId=1470537739827941";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>



    <div id="wrapper" class="boxed">
        <header id="header" class="light">
            <div class="inner-wrapper row">

                <div class="polyglot-language-switcher" data-grid-columns="1" data-anim-effect="fade" data-open-mode="click">
                    <ul style="display: none">
                        <li><a href="{{ app.request.getSchemeAndHttpHost() }}/en" {% if app.request.getLocale() == 'en' %}class="pls-selected-locale"{% endif %} title="English" data-lang-id="en"><img src="{{ asset('bundles/vypersite/img/acme/img/us.png') }}" alt="English"> English</a></li>
                        <li><a href="{{ app.request.getSchemeAndHttpHost() }}/fr" {% if app.request.getLocale() == 'fr' %}class="pls-selected-locale"{% endif %} title="French (France)" data-lang-id="fr"><img src="{{ asset('bundles/vypersite/img/acme/img/fr.png') }}" alt="Français"> Français</a></li>
                    </ul>
                </div>

                <div id="logo">
                    <h1 id="site-logo">
                        <a href="{{ path('vyper_site_index') }}">
                            <img src="{{ asset('bundles/vypersite/img/logo.png?size=150') }}" alt="Vyper Japanese Music" height="120" />
                        </a>
                    </h1>
                </div>



                <div class="ad-banner-728x90">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- footer-leaderboard -->
                    <ins class="adsbygoogle"
                         style="display:inline-block;width:728px;height:90px"
                         data-ad-client="ca-pub-3070362287154347"
                         data-ad-slot="5037213511"></ins>
                    <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            </div>

            <div style="visibility: hidden; display: none; width: 1220px; height: 55px; margin: 0px; float: none; position: relative; top: auto; right: auto; bottom: auto; left: auto;"></div>
            {{ render(controller("VyperSiteBundle:Menu:Menu")) }}

        </header>

        {% block above_the_fold %}

        {% if front_page_index is defined %}
            <div id="above-the-fold" class="above-the-fold light">
                <div class="inner-wrapper">

                    <!-- Flexslider -->
                    <div class="flexslider">
                        <ul class="slides">
                            {% for article in articles_carousel %}
                                <li{% if loop.index == 1 %} class="flex-active-slide"{% endif %}>
                                    <img src="{{ asset(article.picture.getPath('homepage-slider')) }}" alt="{{ article.getTitle }}" title="{{ article.getTitle }}" draggable="false">
                                    <div class="post-box-text">
                                        <span style="background-color: #dd030e"><a href="#">{{ article.getArticleType.getName }}</a></span>
                                        <h3><a href="{{ path('showArticle', {'id': article.getId, 'slug': article.slug}) }}">{{ article.getTitle }}</a></h3>
                                        <p>{{ article.getReleaseDateFrontFormat(article.getId) }}</p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        <ul class="flex-direction-nav"><li><a class="flex-prev" href="#">Previous</a></li><li><a class="flex-next" href="#">Next</a></li></ul></div>

                    <!-- Block with 2 posts -->
                    <div class="block-with-two-posts">
                        <div class="post-block">
                            <a href="http://boutique.vyper-jmusic.com">
                                <img src="{{ asset('bundles/vypersite/img/ad/pub1.png') }}" alt="">
                            </a>

                        </div>
                        <div class="post-block">
                            <a href="http://boutique.vyper-jmusic.com">
                                <img src="{{ asset('bundles/vypersite/img/ad/pub2.png') }}" alt="">
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        {% endif %}
        {% endblock %}

        <section id="section">
            <div class="inner-wrapper">

                <!-- Main -->
                <div id="main" role="main" {% if current_videos is defined %}{% elseif page_magazine is defined %}{% elseif page_job is defined %}{% elseif page_404 is defined %}class="page404"{% else %}class="left"{% endif %}>

                    <!-- Start template -->
                    {% block content %}{% endblock %}
                    <!-- End template -->


                </div>

                {% if current_videos is defined %}
                {% elseif page_404 is defined %}
                {% elseif page_magazine is defined %}
                {% elseif page_job is defined %}
                {% else %}
                <!-- Aside -->
                <aside id="sidebar" role="complementary">

                    <aside id="social-count-widget-2" class="sidebar-widget widget social-counter-widget">

                        <ul class="social-icons">
                            <li class="twitter">
                                <a href="https://twitter.com/VYPER_JMusic" target="_blank" class="social-icon" title="Twitter">
                                    <i class="fa-twitter fa"></i>
                                </a>
                            </li>
                            <li class="facebook">
                                <a href="https://www.facebook.com/vyperjmusic" target="_blank" class="social-icon" title="Facebook">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            </li>
                            <li class="tumblr">
                                <a href="http://vyperjapanesemusic.tumblr.com/" target="_blank" class="social-icon" title="Tumblr">
                                    <i class="fa fa-tumblr"></i></a>
                            </li>
                            <li class="youtube">
                                <a href="https://www.youtube.com/channel/UCodQ1kpPKxIG3NrE6q2iaaw" target="_blank" class="social-icon" title="Youtube">
                                    <i class="fa fa-youtube"></i>
                                </a>
                            </li>
                            <li class="rss">
                                <a href="#" target="_blank" class="social-icon" title="RSS Feed">
                                    <i class="fa fa-rss"></i>
                                </a>
                            </li>

                        </ul>

                    </aside>

                {% block sidebar_context %}
                {% endblock %}

                    {{ render(controller("VyperSiteBundle:Event:nextEvent")) }}

                    <aside class="widget">
                        <div class="widget-title"><h4>{{ 'sidebar.title.follow.us'|trans }}</h4></div>
                        <div class="fb-like-box" data-href="https://www.facebook.com/vyperjmusic" data-width="300" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="true"></div>
                    </aside>

                    <aside class="widget">
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- Skyscraper large -->
                        <ins class="adsbygoogle"
                             style="display:inline-block;width:300px;height:600px"
                             data-ad-client="ca-pub-3070362287154347"
                             data-ad-slot="6077349519"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </aside>



                    <!-- END Sidebar -->
                </aside>
                {% endif %}

            </div>
        </section>

        <footer id="footer" role="contentinfo">

            <!-- Copyright -->
            <div id="copyright">
                <div class="inner-wrapper">
                    <div class="row">
                        <div class="grid_6">{{ 'footer.copyright'|trans }}</div>
                        <div class="grid_6">
                            <ul class="inline-list right">
                                <li><a href="{{ path('vyper_site_partenaires') }}">{{ 'footer.menu.partners'|trans }}</a></li>
                                <li><a href="{{ path('vyper_site_contact') }}">{{ 'footer.menu.contact'|trans }}</a></li>
                                <li><a href="{{ path('vyper_site_jobs') }}">{{ 'footer.menu.jobs'|trans }}</a></li>
                                <li><a href="{{ path('vyper_site_cgu') }}">{{ 'footer.menu.cgu'|trans }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </footer>

    </div>
{% endblock %}



{% block javascripts_footer %}

    {{ parent() }}

    {# Jquery UI #}
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/jquery-ui.min.js" type="text/javascript"></script>

    {% javascripts
    'bundles/vypersite/js/jquery-polyglot.language.switcher.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function ($) {
            $('.polyglot-language-switcher').polyglotLanguageSwitcher();
        });
    </script>

{% endblock %}
